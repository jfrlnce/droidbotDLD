{
    "views": {
      "target_button": {
        "resource_id": "button_resource_id",
        "class": "android.widget.Button"
      }
    },
    "states": {
      "interaction_state": {
        "views": ["target_button"]
      }
    },
    "operations": {
      "press_and_rotate_operation": [
        {
          "event_type": "touch",
          "target_view": "target_button"
        },
        {
          "event_type": "rotate",
          "orientation": "landscape"
        },
        {
          "event_type": "rotate",
          "orientation": "portrait"
        }
      ]
    },
    "main": {
      "interaction_state": ["press_and_rotate_operation"]
    }
  }